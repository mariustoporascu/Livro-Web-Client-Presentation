@page
@model ErrorModel
@{
	ViewData["Title"] = "Error";
	Layout = null;

}

<!DOCTYPE html>
<html class="h-100" lang="ro">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<!-- Website Title -->
	<title>Eroare - Livro</title>
	<!-- SEO Meta Tags -->
	<meta name="description"
		  content="Livro este o platforma ce detine si o aplicatie mobila ce pune la dispozitie clientilor posibilitatea de a efectua comenzi online." />
	<meta name="author" content="TOPMARAIOANAIT S.R.L." />
	<meta name="robots"
		  content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
	<meta name="googlebot"
		  content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
	<meta name="bingbot"
		  content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
	<link rel="canonical" href="https://livro.ro/" />
	<meta property="og:locale" content="ro_RO" />
	<meta property="og:type" content="article" />
	<meta property="og:title" content="Livro Mobile App" />
	<meta property="og:description"
		  content="Livro este o platforma ce detine si o aplicatie mobila ce pune la dispozitie clientilor posibilitatea de a efectua comenzi online." />
	<meta property="og:url" content="https://livro.ro/" />
	<meta property="og:site_name" content="Livro" />
	<meta property="og:image" content="https://livro.ro/images/reclama.jpg" />
	<meta property="og:image:secure_url"
		  content="https://livro.ro/images/reclama.jpg" />
	<meta property="og:image:alt" content="Livro Mobile App" />
	<meta property="og:image:type" content="image/jpeg" />
	<!-- Styles -->
	<link href="https://fonts.googleapis.com/css?family=Montserrat:400,600,700"
		  rel="stylesheet" />
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,400i,700,700i"
		  rel="stylesheet" />
	<link href="~/css/site.css" rel="stylesheet" />
	<link href="~/css/style.css" rel="stylesheet" />

	<!-- Favicon  -->
	<link rel="icon" type="image/png" sizes="16x16" href="~/images/favicon.png">

	<!-- Global site tag (gtag.js) - Google Analytics -->

</head>
<body class="h-100">
	<!--*******************
		Preloader start
	********************-->
	<div id="preloader">
		<div class="loader">
			<svg class="circular" viewBox="25 25 50 50">
				<circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
			</svg>
		</div>
	</div>
	<!--*******************
		Preloader end
	********************-->
	<div class="login-form-bg h-100">
		<div class="container h-100">
			<div class="row justify-content-center h-100">
				<div class="col-xl-6">
					<div class="error-content">
						<div class="card mb-0">
							<div class="card-body text-center pt-5">
								<h1 class="error-text text-primary">404</h1>
								<h4 class="mt-4"><i class="fa fa-thumbs-down text-danger"></i> Bad Request</h4>
								<p>Eroare in procesare.</p>
								<form class="mt-5 mb-5">

									<div class="text-center mb-4 mt-4">
										<a asp-area="" asp-page="/Index" class="btn btn-primary">Pagina principala</a>
									</div>
								</form>
								<div class="text-center">
									<p>Copyright &copy; Designed & Developed by TMIIT 2022</p>

								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script src="~/plugins/common/common.min.js"></script>
	<script src="~/js/custom.min.js"></script>
	<script src="~/js/settings.js"></script>
	<script src="~/js/gleek.js"></script>
	<script src="~/js/styleSwitcher.js"></script>
	<partial name="_ValidationScriptsPartial" />
</body>
</html>
